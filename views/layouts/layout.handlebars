<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>TestNode</title>
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">
</head>
<body>
	<div class="container">
      <div class="header clearfix">
        <nav>
          <ul class="nav nav-pills pull-right">
            {{#if user}}
              <li role="presentation"><a href="/">Painel</a></li>
              <li role="presentation"><a href="/users/logout">Sair</a></li>
            {{else}}
              <li role="presentation"><a href="/users/login">Entrar</a></li>
              <li role="presentation"><a href="/users/register">Registrar</a></li>
            {{/if}}
          </ul>
        </nav>
        <h3 class="text-muted">TestNode</h3>
      </div>

      <div class="row">
        <div class="col-lg-12">
       		{{#if success_msg}}
            <div class="alert alert-success">{{success_msg}}</div>
          {{/if}}

          {{#if error_msg}}
            <div class="alert alert-danger">{{error_msg}}</div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">{{error}}</div>
          {{/if}}

          {{{body}}}
        </div>
      </div>

      <footer class="footer">
        <p>&copy; 2018 TestNode, Inc.</p>
      </footer>

    </div> <!-- /container -->
</body>
</html>